package main;

public class Main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Complex c1 = new Complex(0, 1/Math.sqrt(2.0));
		Complex c2 = new Complex(1/Math.sqrt(2.0), 0);
		Vector s = new Vector(c1, c2);
		Vector l1 = new Vector(new Complex(0, 0), new Complex(1, 0));
		Vector l2 = new Vector(new Complex(0, 0), new Complex(1, 0));
		System.out.println("Length of vector: "+s.length());
		System.out.println("Is unit vector: "+s.isUnitVector());
		System.out.println("Are vectors othogonal: "+l1.isZeroInnerProduct(l2));
		System.out.println("Probability of l1 outcome: "+l1.probabilityOfOutcome(s));
		System.out.println("Probability of l2 outcome: "+l2.probabilityOfOutcome(s));
		
		
		c1 = new Complex(1,0);
		c2 = new Complex(0,-1);
		s = new Vector(c1, c2);
		l1 = new Vector(new Complex(0, 0), new Complex(1, 0));
		l2 = new Vector(new Complex(0, 0), new Complex(1, 0));
		System.out.println("Length of vector: "+s.length());
		System.out.println("Is unit vector: "+s.isUnitVector());
		System.out.println("Are vectors othogonal: "+l1.isZeroInnerProduct(l2));
		System.out.println("Probability of l1 outcome: "+l1.probabilityOfOutcome(s));
		System.out.println("Probability of l2 outcome: "+l2.probabilityOfOutcome(s));
		
		
		
		
		
		
		s = new Vector(new Complex(1/Math.sqrt(2.0), 0), new Complex(0, 1/Math.sqrt(2.0)));
		l1 = new Vector(new Complex(Math.cos(2), 0), new Complex(Math.sin(2), 0));
		l2 = new Vector(new Complex(-Math.sin(2), 0), new Complex(Math.cos(2), 0));
		System.out.println("Are vectors othogonal: "+l1.isZeroInnerProduct(l2));
		System.out.println("Probability of l1 outcome: "+l1.probabilityOfOutcome(s));
		System.out.println("Probability of l2 outcome: "+l2.probabilityOfOutcome(s));
		
		l1 = new Vector(new Complex(1/Math.sqrt(2.0), 0), new Complex(0, 1/Math.sqrt(2.0)));
		l2 = new Vector(new Complex(1/Math.sqrt(2.0), 0), new Complex(0, -1/Math.sqrt(2.0)));
		System.out.println("Are vectors othogonal: "+l1.isZeroInnerProduct(l2));
	}

}
